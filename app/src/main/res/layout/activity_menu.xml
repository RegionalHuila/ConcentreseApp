<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/btnMenuPlay"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnMenuPunatajes"
        android:layout_marginStart="93dp"
        android:text="play"/>

    <Button
        android:id="@+id/btnMenuConfiguraciones"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/btnMenuPlay"
        android:layout_alignTop="@+id/btnMenuInformacion"
        android:text="config"/>

    <Button
        android:id="@+id/btnMenuInformacion"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnMenuPunatajes"
        android:layout_marginBottom="189dp"
        android:text="info"/>

    <Button
        android:id="@+id/btnMenuPunatajes"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="152dp"
        android:text="puntajes"/>
    
</RelativeLayout>