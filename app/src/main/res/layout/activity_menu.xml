<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/fondo_marca_agua">

    <Button
        android:id="@+id/btnMenuPlay"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_above="@+id/btnMenuInformacion"
        android:layout_alignParentStart="true"
        android:layout_marginStart="61dp"
        android:background="@drawable/anima_boton_play" />

    <Button
        android:id="@+id/btnMenuConfiguraciones"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/btnMenuPlay"
        android:layout_below="@+id/btnMenuPlay"
        android:background="@drawable/anima_boton_configuracion"/>

    <Button
        android:id="@+id/btnMenuInformacion"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/btnMenuPunatajes"
        android:layout_centerVertical="true"
        android:background="@drawable/anima_boton_informacion" />

    <Button
        android:id="@+id/btnMenuPunatajes"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignTop="@+id/btnMenuPlay"
        android:layout_toEndOf="@+id/btnMenuPlay"
        android:background="@drawable/anima_boton_puntajes" />
    
</RelativeLayout>