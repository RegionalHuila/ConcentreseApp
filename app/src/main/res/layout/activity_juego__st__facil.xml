<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Juego_ST_Facil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:id="@+id/llPrincipal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvJugador1"
            android:textSize="30sp"
            android:text="Jugador 1"
            android:layout_weight="50"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvJugador2"
            android:textSize="30sp"
            android:text="Jugador 1"
            android:layout_weight="50"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llPrincipal">

        <Chronometer
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cronometroTiempo"
            android:gravity="center_horizontal"
            android:textSize="30sp"/>
    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp">

        <TableRow>

            <ImageView
                android:id="@+id/iv00"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:src="@drawable/reverso" />

            <ImageView
                android:id="@+id/iv01"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:src="@drawable/reverso" />
        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/iv10"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:src="@drawable/reverso" />

            <ImageView
                android:id="@+id/iv11"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:src="@drawable/reverso" />
        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/iv20"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:src="@drawable/reverso" />

            <ImageView
                android:id="@+id/iv21"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:src="@drawable/reverso" />
        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/iv30"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:src="@drawable/reverso" />

            <ImageView
                android:id="@+id/iv31"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:src="@drawable/reverso" />
        </TableRow>
    </TableLayout>

</RelativeLayout>